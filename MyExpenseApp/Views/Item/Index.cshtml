@model IEnumerable<MyExpenseApp.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowd iteams list</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Iteam</a> 
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    { 
        <table class="table table-bordered table-striped"style="width:100%">
            <thead>
                <tr>
                    <th>
                        Iteam name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var iteam in Model)
                {
                <tr>
                    <td width="30%">@iteam.IteamName</td>
                    <td width="30%">@iteam.Borrower</td>
                    <td width="30%">@iteam.Lender</td>
                </tr>
                }
            </tbody>
        </table>
    }else
    {   
        <p>No iteam created yet </p>
    }
</div>